<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/customSpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/customSpinnerIcon"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSpinner_layout"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_language_2" />

        <TextView
            android:id="@+id/tvSpinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Androchunk"
            android:textColor="?attr/texte_primary"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/customSpinnerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/roboto_regular"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_drop_down"
        app:tint="?attr/texte_primary" />

</RelativeLayout>